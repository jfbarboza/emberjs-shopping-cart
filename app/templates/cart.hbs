<main class="container mt-5">
    <h1>Shopping Cart</h1>
    
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <LinkTo @route="index">
                Home
            </LinkTo>
        </li>
        <li class="breadcrumb-item">Shopping Cart</li>
    </ol>
    {{#each this.cart.itemList as |item|}}
      <div class="d-flex align-items-center">
        <h4>{{ item.name }}</h4>
      </div>   
    {{/each}}
    <section class="w-50 ml-auto text-end mb-5">
        <div class="row">
            <div class="col">Subtotal</div>
            <div class="col">{{ currency this.subtotal sign='$' }}</div>
        </div>
        <div class="row">
            <div class="col">Tax</div>
            <div class="col">{{ currency this.tax sign='$' }}</div>
        </div>
        <div class="row">
            <div class="col">Total</div>
            <div class="col">{{ currency this.total sign='$'}}</div>
        </div>
        <button 
            type="button"
            class="btn btn-success float-end mt-5">
            Checkout
        </button>
    </section>
</main>